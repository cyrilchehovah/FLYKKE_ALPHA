  <div class="modal-dialog modal-dialog-devise" role="document">
    <div class="modal-content modal-content-devise">

      <div class="modal-header">
        <h2 class="devise-h2 text-center">Log in</h2>
      </div>
      <div class="modal-body">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "btn btn-primary btn-facebook" do %>
               <i class="fa fa-facebook fa-2x fb-button" ></i> Login with <%= :facebook.to_s.titleize %>
             <% end %>
          <% end -%>
        <% end -%>
        <div class="signup-or-separator">
          <span class="signup-or-separator--text">or</span>
          <hr>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, inline_label: true, label: false, inline_label: 'email', placeholder: "email", input_html: { class: "form-input" } %>
            <%= f.input :password, required: true, autofocus: true, inline_label: true, label: false, inline_label: 'password', placeholder: "password", input_html: { class: "form-input" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="form-actions form-actions-devise">
            <%= f.input :remember_me, as: :boolean, :input_html => { :class => 'checkbox-devise' } if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in", class: "btn-confirm"  %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", "#forgot_password", "data-toggle" => "modal" %><br />
          <%= link_to "Don't have an account? Sign up", "#sign_up", "data-toggle" => "modal" %>
        <% end -%>
      </div>
    </div>
  </div>



